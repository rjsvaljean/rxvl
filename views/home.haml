#home-post-list
  -@posts.each do |post|
    %div{:id => "post-#{post.id}", :class => "post"}
      .post_header
        .post_title.alt.span-15
          %a{:href => post.permalink}
            =post.title
        .post_info.span-3.last
          =post.date
      %hr
      .post_snippet.span-20
        =post.snippet
    %hr.space
    %hr.space
